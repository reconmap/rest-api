server {
        listen [::]:80;
        listen 80;

        server_tokens off;
        server_name localhost;

        root /var/www/webapp/public;
        index index.html index.php;

        location / {
                try_files $uri $uri/ /index.php$is_args$args;
        }

        location ~ \.php$ {
                include snippets/fastcgi-php.conf;
                fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
        }
}

